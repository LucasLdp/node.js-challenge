generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(cuid())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")
  cashFlows CashFlow[]

  @@map("users")
}

model CashFlow {
  id          String       @id @default(cuid())
  userId      String       @map("user_id")
  amount      Float
  type        CashFlowType
  description String?
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")
  user        User         @relation(fields: [userId], references: [id])

  @@map("cash_flows")
}

enum CashFlowType {
  INCOME
  EXPENSE
}
